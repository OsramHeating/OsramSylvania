<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.osram.serpentine.calculator"
        version   = "1.0.0">

    <name>Serpentine Calculator</name>

    <description>
        Calculation app that contains 8 commonly used equations and product detail information containing data about various products.
    </description>

    <author href="http://www.blackboardco.com/" email="osram.application@gmail.com">
        Blackboard and Jae Lee
    </author>

    <content src="index.html" />
    
    <plugin name="cordova-plugin-device"                     source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion"              source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen"               source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar"                  source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-vibration"                  source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist"                  source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-dialogs"                    source="npm" spec="~1.3.1" />
    <plugin name="com.telerik.plugins.nativepagetransitions" source="npm" spec="~0.6.5" />

    <preference name="DisallowOverscroll"           value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true"/>
    <preference name="android-minSdkVersion"        value="14" />
    <preference name="Orientation"                  value="portrait" />
    <preference name="KeyboardShrinksView"          value="false" />
    <preference name="BackgroundColor"              value="0x00000000" />
    <preference name="StatusBarOverlaysWebView"     value="false" />
    <preference name="StatusBarBackgroundColor"     value="#000000" />
    <preference name="StatusBarStyle"               value="lightcontent" />
    <preference name="prerendered-icon"             value="false" />
    
    <icon src="icon.png" gap:role="default" width="512" height="512"/>
    <splash src="splash.png" gap:role="default"/>
    <platform name="android">
    </platform>

    <platform name="ios">
        <icon src="res/icon/ios/icon.png" gap:role="default" width="57" height="57" />
        <icon src="res/icon/ios/icon-2x.png" gap:role="default" width="114" height="114" />
        <icon src="res/icon/ios/icon-40.png" gap:role="default" width="40" height="40" />
        <icon src="res/icon/ios/icon-50.png" gap:role="default" width="50" height="50" />
        <icon src="res/icon/ios/icon-50-2x.png" gap:role="default" width="100" height="100" />
        <icon src="res/icon/ios/icon-57.png" gap:role="default" width="57" height="57" />
        <icon src="res/icon/ios/icon-60.png" gap:role="default" width="60" height="60" />
        <icon src="res/icon/ios/icon-60-2x.png" gap:role="default" width="120" height="120" />
        <icon src="res/icon/ios/icon-60-3x.png" gap:role="default" width="180" height="180" />
        <icon src="res/icon/ios/icon-72.png" gap:role="default" width="72" height="72" />
        <icon src="res/icon/ios/icon-72-2x.png" gap:role="default" width="144" height="144" />
        <icon src="res/icon/ios/icon-76.png" gap:role="default" width="76" height="76" />
        <icon src="res/icon/ios/icon-76-2x.png" gap:role="default" width="152" height="152" />
        <icon src="res/icon/ios/icon-small.png" gap:role="default" width="29" height="29" />
        <icon src="res/icon/ios/icon-small-2x.png" gap:role="default" width="58" height="58" />
        
        <splash src="res/screen/ios/Default.png" platform="ios" width="320" height="480" />
        <splash src="res/screen/ios/Default@2x.png" platform="ios" width="640" height="960" />
        <splash src="res/screen/ios/Default-568h@2x.png" platform="ios" width="640" height="1136" />
        <splash src="res/screen/ios/Default-667h@2x.png" platform="ios" width="750" height="1334" />
        <splash src="res/screen/ios/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
        <splash src="res/screen/ios/Default-Portrait.png" platform="ios" width="768" height="1024" />
        <splash src="res/screen/ios/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
    </platform>
</widget>
